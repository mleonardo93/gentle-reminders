<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <h2 class="media-heading"><%= @user.username %></h2>
        <h2 class="media-heading"><%= @user.email %></h2>
        <ul id="items">
          <%= render @user.items %>
        </ul>
        <% if current_user %>
          <%= render "items/form", item: Item.new, user: @user %>
        <% end %>
      </div>
    </div>
  </div>
</div>
