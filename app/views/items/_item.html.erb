<li data-item-id="<%= item.id %>">
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= item.name %>
        <%= link_to "", user_item_path(@user, item.id), remote:true, method: :delete, class: "glyphicon glyphicon-ok" %>
      </h4>
      <small>
        <% if item.due.nil? %>
          Added <%= time_ago_in_words(item.created_at) %> ago </br>
          Expires in <%= distance_of_time_in_words(Time.now, item.created_at + 7.days) %> 
        <% else %>
          Due at <%= item.due %>
        <% end %>
      </small>
    </div>
  </div>
</li>