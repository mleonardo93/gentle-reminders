<!DOCTYPE html>
<html>
  <head>
    <title>GentleReminders</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <body>
    <div class="container">
      <ul class="nav nav-tabs">
        <li><%= link_to "Home", root_path %></li>

        <% if current_user %>
          <li class="pull-right"><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
          <li class="pull-right"><%= current_user.username %></li>
        <% else %>
          <li class="pull-right"><%= link_to "Sign up", new_user_registration_path %></li>
          <li class="pull-right"><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
